{
  "name": "renoun",
  "type": "module",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "build": "turbo run build",
    "build:site": "pnpm build --filter=@apps/site",
    "build:examples": "pnpm build --filter=@examples/*",
    "build:example": "bash -c 'pnpm build --filter=@examples/$1'",
    "dev": "turbo run dev",
    "dev:site": "pnpm dev --filter=renoun --filter=@apps/site",
    "dev:examples": "pnpm dev --filter=renoun --filter=@examples/*",
    "dev:example": "bash -c 'pnpm dev --filter=renoun --filter=@examples/$1'",
    "test": "turbo run test",
    "test:github": "vitest run .github",
    "format": "prettier --write '**/**/*.{js,ts,tsx,json,css}'",
    "release": "pnpm publish -r --provenance --access public --publish-branch main && pnpm changeset tag",
    "clean": "node -e \"(function rm(directory) { ['.next', '.renoun', '.turbo', 'node_modules', 'dist'].includes(path.basename(directory)) ? fs.rmSync(directory, { recursive: true, force: true }) : fs.existsSync(directory) && fs.statSync(directory).isDirectory() && fs.readdirSync(directory).forEach(filePath => rm(path.join(directory, filePath))); })('.');\""
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@octokit/rest": "22.0.1",
    "@types/node": "25.0.0",
    "prettier": "catalog:",
    "turbo": "2.6.3",
    "typescript": "catalog:",
    "vitest": "4.0.15"
  },
  "pnpm": {
    "overrides": {
      "external-editor>tmp": "0.2.4",
      "on-headers": "1.1.0"
    }
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.16.1"
}
